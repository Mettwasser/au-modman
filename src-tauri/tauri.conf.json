{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Among Us Mod Manager"
	},
	"tauri": {
		"bundle": {
			"active": true,
			"targets": "msi",
			"icon": [
				"icons/app.ico"
			],
			"identifier": "AmongUsModManager",
			"category": "Utility",
			"publisher": "Mettwasser",
			"windows": {
				"allowDowngrades": true,
				"digestAlgorithm": "SHA-256",
				"webviewInstallMode": {
					"silent": true,
					"type": "downloadBootstrapper"
				}
			}
		},
		"security": {
			"csp": ""
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"height": 600,
				"title": "AU Modman",
				"width": 1100,
				"minWidth": 700,
				"minHeight": 500
			}
		],
		"allowlist": {
			"all": false,
			"app": {
				"all": false,
				"hide": false,
				"show": false
			},
			"clipboard": {
				"all": false,
				"readText": false,
				"writeText": false
			},
			"dialog": {
				"open": true
			},
			"fs": {
				"all": true
			}
		}
	}
}